<com.biyoex.app.common.widget.RatioLinearLayout
    android:id="@+id/ll_layout_trade_info"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:gravity="center_vertical"
    android:background="@drawable/selector_trade_market_click"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/text_weak_light"
        android:textSize="12sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="right"
        android:layout_marginEnd="20dp"
        android:singleLine="true"
        android:textColor="@color/text_weak_light"
        android:textSize="12sp" />
    <TextView
        android:layout_width="15dp"
        android:textColor="@color/text_weak_light"
        android:textSize="12sp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_item_rank"
        android:text="12"
        android:layout_height="wrap_content"/>
</com.biyoex.app.common.widget.RatioLinearLayout>
