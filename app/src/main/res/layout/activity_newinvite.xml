<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_newtitle_bar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:padding="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/my_invite_code"
            android:textSize="15sp"
            android:textColor="@color/textBlack"
            android:id="@+id/text"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="asdasfad"
            android:textSize="15sp"
            android:id="@+id/my_shareid"
            android:layout_toRightOf="@id/text"
            android:textColor="@color/textBlack"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_copy"
            android:src="@mipmap/icon_newcopy"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:src="@mipmap/invite_bg"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:background="@color/line_color"
        android:layout_marginTop="20dp"
        android:layout_height="34dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/my_zxing"
        android:textColor="@color/textBlack"
        android:padding="16dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/qr_code_img"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingStart="50dp"
        android:layout_marginTop="30dp"
        android:paddingEnd="50dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:text="@string/save_zxing"
            android:gravity="center"
            android:background="@drawable/invite_btn_blue"
            android:id="@+id/save_zxing"
            android:textColor="@color/white"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="120dp"
            android:layout_alignParentRight="true"
            android:text="@string/create_http"
            android:id="@+id/create_http"
            android:gravity="center"
            android:background="@drawable/invite_btn_gray"
            android:textColor="@color/white"
            android:layout_height="40dp" />
    </RelativeLayout>

</LinearLayout>