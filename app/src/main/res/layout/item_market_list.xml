<?xml version="1.0" encoding="utf-8"?><!--<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="match_parent"--><!--android:layout_height="25dp"--><!--android:background="@drawable/selector_trade_market_click">-->

<com.biyoex.app.common.widget.RatioLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_layout_trade_info"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="@drawable/selector_trade_market_click"
    android:gravity="center_vertical"
    android:orientation="horizontal"
   >
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/text_weak_light"
        android:textSize="12sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingEnd="10dp"
        android:gravity="right"
        android:lineSpacingExtra="-1dp"
        android:singleLine="true"
        android:textColor="@color/text_weak_light"
        android:textSize="12sp" />
</com.biyoex.app.common.widget.RatioLinearLayout><!--</FrameLayout>-->