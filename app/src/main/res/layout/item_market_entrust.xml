<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/item_market_entrust_buyandsell"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_market_entrust_coinname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_market_entrust_buyandsell"
            android:padding="2dp"
            android:textStyle="bold"
            android:textColor="@color/textBlack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_market_entrust_isbuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textBlack"
            android:textSize="8sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_market_entrust_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1dp"
            android:background="@drawable/bg_item_market_entrust_cancel"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="@string/revoke"
            android:textColor="@color/text_999_color"
            android:textSize="10sp" />
    </RelativeLayout>
    <com.biyoex.app.common.widget.RatioLinearLayout
        android:id="@+id/item_market_entrust_progressbar"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:background="@color/line_eee" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <TextView
            android:text="@string/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_999_color"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deal_price"
            android:id="@+id/item_user_price_name"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_999_color"
            android:textSize="10sp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/deal_number"
            android:id="@+id/item_market_entrust_number_name"
            android:layout_alignParentEnd="true"
            android:textColor="@color/text_999_color"
            android:textSize="10sp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <TextView
            android:id="@+id/item_market_entrust_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textBlack"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/item_market_entrust_user_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="挂单价格"
            android:textColor="@color/textBlack"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/item_market_entrust_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:textColor="@color/textBlack"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <TextView
            android:text="@string/deal_success_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_market_entrust_success_total_name"
            android:textColor="@color/text_999_color"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deal_success_single_price"
            android:id="@+id/item_deal_single_price"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_999_color"
            android:textSize="10sp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/success_number"
            android:layout_alignParentEnd="true"
            android:id="@+id/item_entrust_success_sumber_name"
            android:textColor="@color/text_999_color"
            android:textSize="10sp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <TextView
            android:id="@+id/item_market_entrust_success_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textBlack"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/item_market_entrust_success_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:textColor="@color/textBlack"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/item_market_entrust_success_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:textColor="@color/textBlack"
            android:textSize="10sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/line_color" />
</LinearLayout>