<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_coin_iamge"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="16dp"
            android:visibility="gone"
            android:scaleType="center" />

        <TextView
            android:id="@+id/tv_coin_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="ETH"
            android:textColor="@color/colorBlack"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/item_layout_child"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:visibility="gone"
            android:animateLayoutChanges="true">

            <TextView
                android:id="@+id/item_property_recharge"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_height="19dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_item_property_btn"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:text="@string/recharge"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_property_withdraw"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_height="19dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_item_property_btn"
                android:gravity="center"
                android:text="@string/withdraw"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_property_market"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/colorBlack"
                android:layout_height="19dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_item_property_btn"
                android:gravity="center"
                android:text="@string/trade"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_property_transfer"
                android:layout_width="35dp"
                android:layout_height="19dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_item_property_btn"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="@string/transfer"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_property_lock"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_height="19dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/bg_item_property_btn"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/lock_shares"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_property_transfer_account"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_height="19dp"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_item_property_btn"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/transfer_account"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_property_record"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_height="19dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/bg_item_property_btn"
                android:gravity="center"
                android:text="@string/record"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/item_is_open"
            android:layout_width="8dp"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:src="@mipmap/property_right"
            android:layout_marginRight="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:text="@string/all"
            android:textColor="#9A9A9A"
            android:textSize="10sp" />

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/colorText1"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="@string/useful"
            android:textColor="#9A9A9A"
            android:textSize="10sp"  />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:text="@string/lock_infonew"
            android:textColor="#9A9A9A"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/tv_shortName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:textColor="@color/colorText1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_frozen_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/colorText1"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_total_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="1"
            android:textColor="@color/colorText1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:textColor="@color/colorText1"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_content"
        android:layout_marginTop="20dp"
        android:background="@color/line_color" />
</LinearLayout>