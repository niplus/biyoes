<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingTop="14dp"
    android:paddingEnd="20dp"
    android:paddingBottom="14dp">

    <ImageView
        android:id="@+id/iv_item_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_vip_one" />

    <TextView
        android:id="@+id/tv_rank_item_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_item_vip"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_everyday_num_item_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_item_vip"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_item_vip"
        android:gravity="bottom"
        android:textSize="9sp" />

    <ImageView
        android:id="@+id/iv_normal_item_vip"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/circle_gray" />

    <ImageView
        android:id="@+id/iv_select_item_vip"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_vip_select" />

    <TextView
        android:id="@+id/tv_now_price_item_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/iv_normal_item_vip"
        android:layout_toRightOf="@id/tv_rank_item_vip"
        android:gravity="right"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_before_price_item_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_now_price_item_vip"
        android:layout_alignBottom="@id/iv_item_vip"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/iv_normal_item_vip"
        android:layout_toRightOf="@id/tv_everyday_num_item_vip"
        android:gravity="right"
        android:textSize="10sp" />
</RelativeLayout>