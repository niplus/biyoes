<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:id="@+id/rl_item_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="156dp"
        android:layout_height="47dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F5F5F7">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC/USDT"
            android:textColor="#ffa6a6a6"
            android:textSize="10.5sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="9dp"
            android:layout_marginStart="10dp"
            android:id="@+id/tv_coin_name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+4.28%"
            android:textColor="#ff4ed09c"
            android:textSize="9sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_coin_name"
            android:layout_marginEnd="12dp"
            android:id="@+id/tv_range"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.021292"
            android:textColor="#ff333333"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_coin_name"
            app:layout_constraintStart_toStartOf="@+id/tv_coin_name"
            android:layout_marginTop="2dp"
            android:id="@+id/tv_value"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ï¿¥0.12"
            android:textColor="#ff333333"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_range"
            app:layout_constraintEnd_toEndOf="@+id/tv_range"
            android:layout_marginTop="2dp"
            android:id="@+id/tv_usdt_value"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>