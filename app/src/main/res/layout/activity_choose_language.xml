<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/colorWhite"
    tools:context=".my.activity.ChooseLanguageActivity">

    <include layout="@layout/layout_title_bar"/>
    <RelativeLayout
        android:id="@+id/rl_chinese"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_press_style_white"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中文"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />

        <ImageView
            android:id="@+id/iv_chinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/r_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_chinese"
            android:layout_marginRight="8dp"
            android:textSize="13sp"
            android:textColor="@color/colorBlack"
            android:text=""
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

    <RelativeLayout
        android:id="@+id/rl_us"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_press_style_white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_us"
            android:src="@mipmap/r_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_us"
            android:layout_marginRight="8dp"
            android:textSize="13sp"
            android:textColor="@color/colorBlack"
            android:text=""
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_kr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_press_style_white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한글"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_kr"
            android:src="@mipmap/r_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_kr"
            android:layout_marginRight="8dp"
            android:textSize="13sp"
            android:textColor="@color/colorBlack"
            android:text=""
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_jp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_press_style_white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日文"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_jp"
            android:src="@mipmap/r_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_jp"
            android:layout_marginRight="8dp"
            android:textSize="13sp"
            android:textColor="@color/colorBlack"
            android:text=""
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_vn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_press_style_white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiếng việt nam"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_vn"
            android:src="@mipmap/r_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_vn"
            android:layout_marginRight="8dp"
            android:textSize="13sp"
            android:textColor="@color/colorBlack"
            android:text=""
            />
    </RelativeLayout>
</LinearLayout>