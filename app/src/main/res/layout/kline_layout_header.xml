<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#261F1C"
    android:paddingTop="40dp"
    android:id="@+id/ll_toolbar"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/iv_fall_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/while_arrow_back"
        android:scaleType="center"
        android:paddingLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/iv_fall_back"
        app:layout_constraintLeft_toRightOf="@id/iv_fall_back"
        app:layout_constraintTop_toTopOf="@id/iv_fall_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:drawableLeft="@mipmap/icon_kline_select_coin"
        android:id="@+id/tv_kline_coinname"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="BTC"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/iv_fall_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_kline_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        android:src="@mipmap/icon_kline_share"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_fall_back" />

    <ImageView
        android:id="@+id/iv_kline_fons"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/icon_mine_fons"
        app:layout_constraintRight_toLeftOf="@id/iv_kline_share"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>