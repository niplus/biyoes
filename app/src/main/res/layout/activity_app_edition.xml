<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >

    <include layout="@layout/layout_newtitle_bar" />
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/about_us"
        android:textSize="25sp"
        android:textColor="@color/colorBlack"
        android:padding="15dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:text="@string/privacy_policy"
        android:padding="16dp"
        android:textSize="15sp"
        android:id="@+id/tv_private"
        android:textColor="@color/colorBlack"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/zhg"
        android:layout_marginTop="25dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/my_theme"
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:padding="16dp"
        android:text="@string/help_center"
        android:id="@+id/tv_help"
        android:textColor="@color/colorBlack"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ll_security_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/rl_latest_version"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="@string/version"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/tv_versionname"
                android:layout_marginRight="15dp"

                android:textColor="@color/text_weak_light"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>